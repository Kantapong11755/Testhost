<body style="text-align: center; padding-left:30%; padding-right:30%;">
    <h1 style="text-align: center;">จัดการตัวเลือก</h1>
    <div class="container">
        <h4>คณะ <%= selcter%></h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>สาขา</th>
                    <th>ลบ</th>
                </tr>
            </thead>
            <tbody>
                <% Object.values(faculty_list).forEach(function(item){%>
                    <tr>
                        <form action="/scholarships/branchdelete" method="POST">
                            <input type="hidden" value="<%= selcter%>" name="facultyname">
                            <input type="hidden" value="<%= item%>" name="branchname">
                            <td><%= item%></td>
                            <td><button type="submit" onclick="return confirm('คุณต้องการลบข้อมูลหรือไม่ ?')">ลบ</button></td>
                        </form>
                    </tr> 
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
